<?xml version="1.0" encoding="UTF-8"?>

<Shell
  x:Class="AdminPanel.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:base="clr-namespace:AdminPanel.Views.Base"
  xmlns:profile="clr-namespace:AdminPanel.Views.Profile"
  xmlns:articles="clr-namespace:AdminPanel.Views.Articles"
  FlyoutBehavior="Disabled"
  Title="AdminPanel">

  <ShellContent Title="Главная" ContentTemplate="{DataTemplate base:MainPage}" />
  <ShellContent Title="Профиль" ContentTemplate="{DataTemplate profile:ProfilePage}" />
  <ShellContent Title="Статьи" ContentTemplate="{DataTemplate articles:ArticlesPage}" />
</Shell>