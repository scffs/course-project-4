<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

  <Style x:Key="DarkEntryStyle" TargetType="Entry">
    <Setter Property="PlaceholderColor" Value="#BBBBBB" />
    <Setter Property="TextColor" Value="#FFFFFF" />
    <Setter Property="BackgroundColor" Value="#1E1E1E" />
  </Style>

  <Style x:Key="DarkButtonStyle" TargetType="Button">
    <Setter Property="BackgroundColor" Value="#6200EE" />
    <Setter Property="TextColor" Value="#FFFFFF" />
  </Style>

  <Style x:Key="DarkLabelStyle" TargetType="Label">
    <Setter Property="TextColor" Value="#CF6679" />
  </Style>

  <Style x:Key="DarkActivityIndicatorStyle" TargetType="ActivityIndicator">
    <Setter Property="Color" Value="#FFFFFF" />
  </Style>

</ResourceDictionary>