<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:UserPanel.Models"
             xmlns:helpers="clr-namespace:UserPanel.Helpers"
             xmlns:viewModels="clr-namespace:UserPanel.ViewModels"
             x:Class="UserPanel.Views.Hero.HeroesPage"
             x:DataType="viewModels:HeroesViewModel"
             Title="Герои">
    <ContentPage.Resources>
        <ResourceDictionary>
            <helpers:SexToStringConverter x:Key="SexToStringConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <CollectionView x:Name="heroesCollectionView" ItemsSource="{Binding Heroes}" SelectionMode="Single" SelectedItem="{Binding SelectedHero, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Hero">
                    <Frame CornerRadius="10" Padding="15" WidthRequest="350" HorizontalOptions="Center" Margin="0, 15, 0, 15">
                        <Grid RowDefinitions="Auto,*" ColumnDefinitions="Auto,*">
                            <!-- Имя героя -->
                            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding Name}" FontSize="18" HorizontalOptions="Center" FontAttributes="Bold" />
                             <!--Фото героя--> 
                            <Image Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Source="{Binding PhotoUrl}" Aspect="AspectFill" HeightRequest="200" HorizontalOptions="FillAndExpand">
                                <Image.Triggers>
                                    <DataTrigger TargetType="Image" Binding="{Binding PhotoUrl}" Value="{x:Null}">
                                        <Setter Property="Source" Value="default_hero.png"/>
                                    </DataTrigger>
                                </Image.Triggers>
                            </Image>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>