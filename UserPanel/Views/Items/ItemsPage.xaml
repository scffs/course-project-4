<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:UserPanel.ViewModels"
             x:Class="UserPanel.Views.Items.ItemsPage"
             xmlns:models="clr-namespace:UserPanel.Models"
             Title="Предметы"
             x:DataType="viewModels:ItemsViewModel">

    <ScrollView>
        <VerticalStackLayout>
            <FlexLayout 
                    BindableLayout.ItemsSource="{Binding Items}" 
                    AlignItems="Center" 
                    JustifyContent="Center" 
                    Wrap="Wrap" 
                    HorizontalOptions="Center">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:Item">
                        <Frame CornerRadius="10" 
                               WidthRequest="180"
                               Margin="5">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:ItemsViewModel}}, Path=NavigateToItemDetailsCommand}" 
                                                      CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                            <VerticalStackLayout Spacing="5" VerticalOptions="Center" HorizontalOptions="Center">
                                <Label 
                                Text="{Binding Title}" 
                                FontSize="16" 
                                TextColor="#fddebf"    
                                HorizontalTextAlignment="Center" 
                                MaxLines="2" 
                                LineBreakMode="TailTruncation" />
                                <Image 
                                Source="{Binding PreviewUrl}" 
                                Aspect="AspectFill" 
                                HeightRequest="200" 
                                WidthRequest="200" 
                                HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>