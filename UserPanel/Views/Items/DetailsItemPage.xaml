<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UserPanel.Views.Items.DetailsItemPage"
             Title="DetailsItemPage">
    <VerticalStackLayout Padding="20">
        <Image Source="{Binding PreviewUrl}" Aspect="AspectFit" HeightRequest="200" />
        <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="Title" Margin="0,20,0,10" />
        <Label Text="Описание:" FontAttributes="Bold" />
        <Label Text="{Binding Description}" Margin="0,5,0,20" />
        <Label Text="Цена:" FontAttributes="Bold" />
        <Label Text="{Binding Price}" />
        <Label Text="Категория:" FontAttributes="Bold" />
        <Label Text="{Binding ItemCategoryId}" />
        <Label Text="Активация:" FontAttributes="Bold" />
        <Label Text="{Binding IsActivated, Converter={StaticResource BooleanStringConverter}}" />
    </VerticalStackLayout>
</ContentPage>