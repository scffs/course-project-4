<Shell
  x:Class="UserPanel.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:auth="clr-namespace:UserPanel.Views.Auth"
  FlyoutBehavior="Disabled"
  Title="UserPanel">

  <FlyoutItem>
    <ShellContent Route="Login" ContentTemplate="{DataTemplate auth:LoginPage}" />
    <ShellContent Route="Register" ContentTemplate="{DataTemplate auth:RegisterPage}" />
  </FlyoutItem>
</Shell>